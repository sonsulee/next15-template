{
  "name": "next-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "----------------------DEVELOPMENT----------------------": "",
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "------------------------QUALITY-------------------------": "",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "lint:apply": "biome check --apply src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "type-check": "tsc --noEmit",
    "quality": "pnpm type-check && pnpm lint:fix && pnpm format",
    "quality:check": "pnpm type-check && pnpm format:check && pnpm lint",
    "--------------------------TESTS-------------------------": "",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:update": "vitest -u",
    "test:debug": "vitest --inspect-brk --single-thread",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.89.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-error-boundary": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@chromatic-com/storybook": "^4.1.1",
    "@playwright/test": "^1.55.0",
    "@storybook/addon-a11y": "^9.1.6",
    "@storybook/addon-docs": "^9.1.6",
    "@storybook/addon-vitest": "^9.1.6",
    "@storybook/nextjs-vite": "^9.1.6",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "storybook": "^9.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}